- content_for :header_tags do
  = preload_link_tag asset_pack_path('features/getting_started.js'), crossorigin: 'anonymous'
  = preload_link_tag asset_pack_path('features/compose.js'), crossorigin: 'anonymous'
  = preload_link_tag asset_pack_path('features/home_timeline.js'), crossorigin: 'anonymous'
  = preload_link_tag asset_pack_path('features/notifications.js'), crossorigin: 'anonymous'

  %meta{name: 'applicationServerKey', content: Rails.configuration.x.vapid_public_key}
  %script#initial-state{ type: 'application/json' }!= json_escape(@initial_state_json)

  = javascript_pack_tag 'application', integrity: true, crossorigin: 'anonymous'

.content
  .app-holder#mastodon{ data: { props: Oj.dump(default_props) } }
    %noscript
      = image_pack_tag 'logo.svg', alt: 'Mastodon'

      %div
        = t('errors.noscript_html', apps_path: 'https://joinmastodon.org/apps')

.content
  %footer.neko-footer
    .grid
      .column-0
        %h4= t 'footer.resources'
        %ul
          %li= link_to t('about.terms'), terms_path
          %li= link_to t('about.privacy_policy'), terms_path
      .column-1
        %h4= t 'footer.developers'
        %ul
          %li= link_to t('about.documentation'), 'https://docs.joinmastodon.org/'
          %li= link_to t('about.api'), 'https://docs.joinmastodon.org/api/guidelines/'
      .column-2
        %p poop

      .column-3
        %h4= site_hostname
        %ul
          %li= link_to t('about.about_this'), about_more_path
          %li= "v#{Mastodon::Version.to_s}"
      .column-4
        %h4= t 'footer.more'
        %ul
          %li= link_to t('about.source_code'), Mastodon::Version.source_url
          %li= link_to t('about.apps'), 'https://joinmastodon.org/apps'

